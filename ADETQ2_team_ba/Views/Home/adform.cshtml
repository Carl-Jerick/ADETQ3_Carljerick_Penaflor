@model Enrollment.Models.admission
<div class="panel panel-success">
    <div class="panel-heading text-center"><h4>ADMISSION</h4></div>
    <div class="panel-body">
        <form class="p-a-1" asp-action="adform" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Name">Student name:</label>
                <input class="form-control" asp-for="Name" />
            </div>
            <div class="form-group">
                <label asp-for="No">Student Number:</label>
                <input class="form-control" asp-for="No" />
            </div>
            <div class="form-group">
                <label asp-for="Age">Age:</label>
                <input class="form-control" asp-for="Age" />
            </div>
            <div class="form-group">
                <label asp-for="address">Address:</label>
                <input class="form-control" asp-for="address" />
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">
                    Confirm
                </button>
            </div>
        </form>
    </div>
</div>